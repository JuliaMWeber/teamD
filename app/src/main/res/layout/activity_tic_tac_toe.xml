<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tictactoe.controller.TicTacToeActivity">

    <TextView
        android:id="@+id/playerOneScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player x:"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/playerTwoScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Player o:"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/playerOneScore" />

    <TextView
        android:id="@+id/countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="128dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <Button
        android:id="@+id/startNewGameButton"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:background="@drawable/button"
        android:text="@string/restartButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/statusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="159dp"
        android:layout_height="144dp"
        android:background="@drawable/tictactoe3x3"
        android:layout_marginBottom="224dp"
        app:layout_constraintBottom_toTopOf="@+id/startNewGameButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/f2"
            android:layout_width="51dp"
            android:layout_height="43dp"
            android:gravity="center"
            app:layout_column="2"
            app:layout_row="0" />

        <TextView
            android:id="@+id/f0"
            android:layout_width="51dp"
            android:layout_height="43dp"
            android:gravity="center"
            app:layout_column="0"
            app:layout_row="0" />


        <TextView
            android:id="@+id/f3"
            android:layout_width="50dp"
            android:layout_height="48dp"
            android:gravity="center"
            app:layout_column="0"
            app:layout_row="1" />

        <TextView
            android:id="@+id/f4"
            android:layout_width="53dp"
            android:layout_height="48dp"
            android:gravity="center"
            app:layout_column="1"
            app:layout_row="1" />

        <TextView
            android:id="@+id/f5"
            android:layout_width="48dp"
            android:layout_height="46dp"
            android:gravity="center"
            app:layout_column="2"
            app:layout_row="1" />

        <TextView
            android:id="@+id/f6"
            android:layout_width="49dp"
            android:layout_height="45dp"
            android:gravity="center"
            app:layout_column="0"
            app:layout_row="2" />

        <TextView
            android:id="@+id/f8"
            android:layout_width="48dp"
            android:layout_height="46dp"
            android:gravity="center"
            app:layout_column="2"
            app:layout_row="2" />

        <TextView
            android:id="@+id/f7"
            android:layout_width="53dp"
            android:layout_height="46dp"
            android:gravity="center"
            app:layout_column="1"
            app:layout_row="2" />

        <TextView
            android:id="@+id/f1"
            android:layout_width="53dp"
            android:layout_height="43dp"
            android:gravity="center"
            app:layout_column="1"
            app:layout_row="0" />

    </androidx.gridlayout.widget.GridLayout>
    <ImageView
        android:id="@+id/XTurn"
        android:layout_width="148dp"
        android:layout_height="87dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/playerTwoScore"
        app:layout_constraintVertical_bias="0.117"
        app:srcCompat="@drawable/activex" />

    <ImageView
        android:id="@+id/OTurn"
        android:layout_width="90dp"
        android:layout_height="94dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.122"
        app:srcCompat="@drawable/activeo" />


</androidx.constraintlayout.widget.ConstraintLayout>
