<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tictactoe.controller.StartTicTacToeActivity">

  <Button
      android:id="@+id/easyButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="32dp"
      android:layout_marginBottom="32dp"
      android:background="@drawable/pixel_button_small_square_thm_primary"
      android:gravity="center"
      android:text="@string/easyButton"
      app:layout_constraintBottom_toTopOf="@+id/hardButton"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.971" />

  <Button
      android:id="@+id/hardButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@drawable/pixel_button_small_square_thm_primary"
      android:gravity="center"
      android:text="@string/hardButton"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.83" />

  <ImageView
      android:id="@+id/imageView2"
      android:layout_width="274dp"
      android:layout_height="266dp"
      android:layout_marginTop="24dp"
      app:layout_constraintBottom_toTopOf="@+id/easyButton"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/tictactoe" />

</androidx.constraintlayout.widget.ConstraintLayout>