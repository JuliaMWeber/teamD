<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:background="@drawable/hintergrund">

    <GridLayout
        android:id="@+id/neuesSpiel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:columnCount="3"
        android:foregroundGravity="center_vertical|center_horizontal"
        android:rowCount="4">


        <Button
            android:id="@+id/neuesSpielButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowSpan="3"
            android:layout_columnSpan="2"
            android:background="@drawable/button_grundlage_xxs"
            android:fontFamily="@font/pixel12x10"
            android:text="Neues Spiel" />


    </GridLayout>

    <de.thm.mow2gamecollection.sudoku.view.SudokuBoardView
        android:id="@+id/sudokuBoardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/buttonsLayout"/>

    <GridLayout
        android:id="@+id/buttonsLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="4"
        android:columnCount="4"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/oneButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:background="@drawable/buttongrundlage"
            android:fontFamily="@font/pixel12x10"
            android:text="1" />

        <Button
            android:id="@+id/twoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:background="@drawable/buttongrundlage"
            android:fontFamily="@font/pixel12x10"
            android:text="2" />

        <Button
            android:id="@+id/threeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="2"
            android:background="@drawable/buttongrundlage"
            android:fontFamily="@font/pixel12x10"
            android:text="3" />

        <Button
            android:id="@+id/fourButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:background="@drawable/buttongrundlage"
            android:fontFamily="@font/pixel12x10"
            android:text="4" />

        <Button
            android:id="@+id/fiveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:background="@drawable/buttongrundlage"
            android:fontFamily="@font/pixel12x10"
            android:text="5" />

        <Button
            android:id="@+id/sixButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="2"
            android:background="@drawable/buttongrundlage"
            android:fontFamily="@font/pixel12x10"
            android:text="6" />

        <Button
            android:id="@+id/sevenButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:background="@drawable/buttongrundlage"
            android:fontFamily="@font/pixel12x10"
            android:text="7" />

        <Button
            android:id="@+id/eightButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:background="@drawable/buttongrundlage"
            android:fontFamily="@font/pixel12x10"
            android:text="8" />

        <Button
            android:id="@+id/nineButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="2"
            android:background="@drawable/buttongrundlage"
            android:fontFamily="@font/pixel12x10"
            android:text="9" />

        <ImageButton
            android:id="@+id/notizButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal"
            android:background="@drawable/buttongrundlage"
            android:contentDescription="@string/Notiz"
            app:srcCompat="@drawable/edit_pen_black" />

        <ImageButton
            android:id="@+id/entfernenButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_gravity="fill_horizontal"
            android:background="@drawable/buttongrundlage"
            android:contentDescription="@string/Entfernen"
            app:srcCompat="@drawable/delete_black" />

        <Button
            android:id="@+id/loesenButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_gravity="fill_horizontal"
            android:background="@drawable/buttongrundlage"
            android:fontFamily="@font/pixel12x10"
            android:text="LÃ¶sen" />

    </GridLayout>


</RelativeLayout>